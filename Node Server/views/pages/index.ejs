<html lang="en">
<head>
   <% include ../partials/head %>

    <script>
function enter(){
    var name = document.getElementById("nameInput").value;
    if(name.length > 0)
        window.location = "/user/"+name;
    return false;
}
    </script>
</head>

<body class="container">
  <header>
    <!-- <% include ../partials/header %> -->
</header>

    <h1 class = flexItem id="welcome">Hi, I will find a new TV Show for you!</h1>

    <form  autocomplete="off" id="nameForm"  onsubmit="return enter()" target="_self">
      <div class="flexItem" id="question">What's your name?</div>
        <input  class="flexItem" id="nameInput"  autofocus="true" name="user" type="textfield"  />

        <input id="enterBtn" class="flexItem" type="submit" value="Enter"/>
    </form>
</body>
</html>
